variable "proxmox_host" {
  description = "IP адрес Proxmox сервера"
  type        = string
  sensitive   = true # Скрывает значение переменной в выводе команд Terraform
}

variable "proxmox_user" {
  description = "Пользователь Proxmox"
  type        = string
  sensitive   = true
}

variable "proxmox_password" {
  description = "Пароль пользователя"
  type        = string
  sensitive   = true
}

variable "vm_id" {
  description = "Уникальный числовой идентификатор (VMID) для создаваемой виртуальной машины в Proxmox"
  type        = number
  default     = 91001 # Рекомендуется использовать диапазон ID для автоматически создаваемых ВМ
}

variable "vm_name" {
  description = "Имя виртуальной машины"
  type        = string
  default     = "terraform-vm"
}

variable "vm_cores" {
  description = "Количество ядер CPU"
  type        = number
  default     = 2
}

variable "vm_memory" {
  description = "Объем оперативной памяти (МБ)"
  type        = number
  default     = 2048 # 2 ГБ
}

variable "vm_disk_size" {
  description = "Размер диска"
  type        = string
  default     = "20G"
}

variable "target_node" {
  description = "Имя узла (ноды) в кластере Proxmox, на котором будет размещена виртуальная машина"
  type        = string
  default     = "pve"  # Стандартное имя для одиночного хоста Proxmox VE
}
